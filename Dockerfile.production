
FROM node:18-alpine as build
# Installing libvips-dev for sharp Compatibility
RUN apk update && apk add --no-cache build-base gcc autoconf automake zlib-dev libpng-dev vips-dev && rm -rf /var/cache/apk/* > /dev/null 2>&1
ARG NODE_ENV=production
ENV NODE_ENV=${NODE_ENV}
WORKDIR /opt/edm_project/edm-server
COPY ./package.json ./package-lock.json ./
ENV PATH /opt/edm_project/edm-server/node_modules/.bin:$PATH
RUN npm install --production
WORKDIR /opt/edm_project/edm-server
COPY ./ .
RUN npm run build


FROM node:18-alpine
# Installing libvips-dev for sharp Compatibility
RUN apk add vips-dev
RUN rm -rf /var/cache/apk/*
ARG NODE_ENV=production
ENV NODE_ENV=${NODE_ENV}
WORKDIR /opt/edm_project/edm-server
COPY --from=build /opt/edm_project/edm-server/node_modules ./node_modules
ENV PATH /opt/edm_project/edm-server/node_modules/.bin:$PATH
COPY --from=build /opt/edm_project/edm-server ./
EXPOSE 1337
CMD ["npm", "run","start"]
